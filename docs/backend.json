{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["student", "admin"] },
        "approved": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "year": { "type": "string", "enum": ["first", "second", "third", "fourth"] }
      },
      "required": ["uid", "name", "email", "role", "approved", "createdAt"]
    },
    "subject": {
      "title": "Subject",
      "description": "A course subject.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "year": { "type": "string", "enum": ["first", "second", "third", "fourth"] },
        "semester": { "type": "string", "enum": ["first", "second"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "year", "semester", "createdAt"]
    },
    "lecture": {
      "title": "Lecture",
      "description": "A lecture for a subject.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "pdfUrl": { "type": "string", "format": "uri" },
        "subjectId": { "type": "string" },
        "subjectName": { "type": "string" },
        "year": { "type": "string", "enum": ["first", "second", "third", "fourth"] },
        "semester": { "type": "string", "enum": ["first", "second"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "quiz": { "$ref": "#/entities/quiz" }
      },
      "required": ["id", "title", "description", "pdfUrl", "subjectId", "subjectName", "year", "semester", "createdAt"]
    },
    "quiz": {
      "title": "Quiz",
      "description": "A quiz associated with a lecture.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "questions": {
          "type": "array",
          "items": { "$ref": "#/entities/question" }
        }
      },
      "required": ["title", "questions"]
    },
    "question": {
        "title": "Question",
        "description": "A single question in a quiz.",
        "type": "object",
        "properties": {
            "text": { "type": "string" },
            "options": { "type": "array", "items": { "type": "string" } },
            "correctAnswer": { "type": "string" }
        },
        "required": ["text", "options", "correctAnswer"]
    },
    "quizSubmission": {
      "title": "Quiz Submission",
      "description": "A student's submission for a quiz.",
      "type": "object",
      "properties": {
        "quizId": { "type": "string" },
        "quizTitle": { "type": "string" },
        "lectureId": { "type": "string" },
        "subjectId": { "type": "string" },
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "score": { "type": "number" },
        "answers": { "type": "object" },
        "submittedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["quizId", "quizTitle", "lectureId", "subjectId", "userId", "score", "submittedAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "indexes": [
        {
            "collectionGroup": "subjects",
            "queryScope": "COLLECTION",
            "fields": [
                {"fieldPath": "year", "order": "ASCENDING"},
                {"fieldPath": "createdAt", "order": "DESCENDING"}
            ]
        },
         {
            "collectionGroup": "lectures",
            "queryScope": "COLLECTION_GROUP",
            "fields": [
                {"fieldPath": "year", "order": "ASCENDING"},
                {"fieldPath": "createdAt", "order": "DESCENDING"}
            ]
        }
    ],
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "User profile data."
    },
    "/subjects/{subjectId}": {
      "schema": { "$ref": "#/entities/subject" },
      "description": "Course subjects."
    },
    "/subjects/{subjectId}/lectures/{lectureId}": {
      "schema": { "$ref": "#/entities/lecture" },
      "description": "Lectures for a specific subject."
    },
    "/quizSubmissions/{submissionId}": {
      "schema": { "$ref": "#/entities/quizSubmission" },
      "description": "Student quiz submissions."
    }
  },
  "securityRules": {
    "rules": {
      "{document=**}": {
        ".read": "true",
        ".write": "true"
      }
    }
  }
}
